{
  "name": "wellcome-patterns",
  "version": "1.0.0",
  "description": "Wellcome Collection pattern library",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "mocha --require test/helpers/setup.js",
    "build:js": "webpack",
    "watch:js": "webpack --watch",
    "build:app:scss": "node-sass --output-style compressed scss/application.scss > dist/assets/css/application.css",
    "build:styleguide:scss": "node-sass --output-style compressed scss/styleguide.scss > dist/assets/css/styleguide.css",
    "watch:app:scss": "onchange 'scss/**/*.scss' -- npm run build:app:scss",
    "watch:styleguide:scss": "onchange 'scss/**/*.scss' -- npm run build:styleguide:scss"
  },
  "author": "David McCormick <d.mccormick@wellcome.ac.uk>",
  "license": "MIT",
  "dependencies": {
    "lodash": "4.6.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.2",
    "json-loader": "^0.5.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^3.5.0",
    "enzyme": "^2.0.0",
    "eslint": "^2.2.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-config-standard-jsx": "^1.1.1",
    "eslint-config-standard-react": "^2.3.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-react": "^4.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "jsdom": "^8.0.4",
    "mocha": "^2.4.5",
    "node-sass": "^3.10.0",
    "nyc": "^6.0.0",
    "onchange": "^3.0.2",
    "react-addons-test-utils": "^0.14.7",
    "rsg-alt": "^3.15.0",
    "sinon": "^1.17.3",
    "webpack": "^1.12.13"
  },
  "directories": {
    "test": "test"
  }
}
